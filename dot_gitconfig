# Local/private config goes in the include
[include]
  path = ~/.gitconfig.local
[hub]
  protocol = https
[alias]
  co = checkout
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  a = add
  aa = add --all
  d = difftool --no-symlinks --dir-diff
  dc = difftool --no-symlinks --dir-diff --cached
  pl = pull
  pu = push
  puf = push --force
  s = status
  co = checkout
  cob = checkout -b
  com = checkout main
  amend = commit --amend --no-edit
  c = commit
  ca = commit -a
  cam = commit -a -m
  cm = commit -m
  gone = "!f() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; f"
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip
  r = reset HEAD
  r1 = reset HEAD^
  r2 = reset HEAD^^
  rhard = reset --hard
  rhard1 = reset HEAD^ --hard
  rhard2 = reset HEAD^^ --hard
  sd = stash drop
  spo = stash pop
  spu = stash push
  spua = stash push --all
  rs = restore --staged
[core]
  excludesfile = /Users/evan/.gitignore
  filemode = false
  trustctime = false
  autocrlf = false
  safecrlf = false
  pager = delta
[apply]
  whitespace = fix
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  light = false
[merge]
  conflictstyle = diff3
[diff]
  tool = kitty
  guitool = kitty.gui
[mergetool]
  keepBackup = false
[help]
  autocorrect = 1
[push]
  default = tracking
[user]
