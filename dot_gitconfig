  email = evan@evanriley.net
	signingkey = 6654D512E44E3D20
[commit]
	gpgsign = true
[difftool]
  prompt = false
  trustExitCode = true
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[difftool "kitty"]
  cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitten diff $LOCAL $REMOTE
[mergetool "nvimmerge"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c 'winc J | winc ='
  trustExitCode = true
[fsck]
  zeroPaddedFilemode = ignore
[init]
  defaultBranch = main
[pull]
  rebase = true
[fetch]
  prune = true
[branch]
